pipeline{
    agent any

    tools{
        maven 'mvn'
    }

    stages{


        stage('checkout'){
            steps{
                checkout scm 
            }
        }

        stage('Test'){

            steps{
                sh'''

                mvn test

                '''
            }
        }

        stage('Build'){
            steps{

                sh'''
                mvn -B clean 
                echo "Maven application built"
                '''
            }
        }

        stage('Archive'){

            steps{
                archiveArtifacts artifacts: 'target/*.jar' , fingerprint: true

            }
        }
    }


    
    post {
        success {
            echo "Pipeline SUCCESS for ${env.BRANCH_NAME}"
        }
        failure {
            echo "Pipeline FAILED for ${env.BRANCH_NAME}"
        }
    }
}
